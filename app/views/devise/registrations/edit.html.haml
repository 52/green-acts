- provide :title, "Account Settings"
.row.justify-content-center
  .col-md-6
    %h2 Account Settings
    = form_for(@user, url: user_registration_path, html: { method: :put }) do |f|

      .form-group
        = f.label :name
        = f.text_field :name, class: "form-control", autofocus: true
        = render "shared/form_error_message", object: @user, field: :name

      .form-group
        = f.label :username
        = f.text_field :username, class: "form-control"
        = render "shared/form_error_message", object: @user, field: :username

      .form-group
        = f.label :email
        = f.email_field :email, class: "form-control"
        = render "shared/form_error_message", object: @user, field: :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}

      .form-group
        = f.label :password
        %small.form-text.text-muted
          (leave blank if you don't want to change it)
        = f.password_field :password, class: "form-control"
        - if @minimum_password_length
          %small.form-text.text-muted
            #{@minimum_password_length} characters minimum
        = render "shared/form_error_message", object: @user, field: :password

      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: "form-control"
        = render "shared/form_error_message", object: @user, field: :password_confirmation

      .form-group
        = f.label :current_password
        %small.form-text.text-muted
          (we need your current password to confirm your changes)
        = f.password_field :current_password, class: "form-control"
        = render "shared/form_error_message", object: @user, field: :current_password

      .form-group
        = f.submit "Update", class: "btn btn-primary"
  .col-md-6
    %h3 Cancel my account
    %p
      Unhappy? #{button_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"}
    = link_to "Back", :back

= render "shared/highlight_error_fields"
